<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mind_android.bookingapp.activities.dashboard_part.ExpenseForm_Activity">
    <include
        layout="@layout/back_toolbar"/>
    <LinearLayout
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:gravity="center_horizontal"
            android:id="@+id/headTv"
            android:textAllCaps="true"
            android:fontFamily="@font/mydridpro"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:text="Expense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:visibility="visible"
            android:orientation="vertical"
            android:id="@+id/saleForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:background="@drawable/grey_rect_btn"
                android:layout_marginTop="20dp"
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                />

            <EditText
                android:background="@drawable/grey_rect_btn"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:id="@+id/otherET"
                android:paddingLeft="10dp"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Other Expense Category"/>

            <EditText
                android:layout_marginTop="10dp"
                android:background="@drawable/grey_rect_btn"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:id="@+id/descET"
                android:paddingLeft="10dp"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Expense Descriptions"/>


            <EditText
                android:background="@drawable/grey_rect_btn"

                android:layout_marginTop="10dp"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:id="@+id/priceEt"
                android:paddingLeft="10dp"
                android:inputType="number|numberDecimal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Expense Amount (* Enter Only Number *)"/>


            <TextView
                android:id="@+id/dateTV"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/grey_rect_btn"
                android:drawableRight="@drawable/dropdown_icon10"
                android:gravity="center_vertical"
                android:hint="Expense Date"
                android:paddingLeft="10dp"
                android:paddingRight="20dp"
                android:textColor="@color/black" />

        </LinearLayout>

        <Button
            android:id="@+id/add_btn"
            android:textColor="@color/white"
            android:text="Add Expense"
            android:textAllCaps="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/green_rect_btn"
            android:layout_width="match_parent"
            android:layout_height="35dp" />

    </LinearLayout>

</LinearLayout>
