<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mind_android.bookingapp.activities.dashboard_part.BankActivity">

    <RelativeLayout
        android:id="@+id/topbar"
        android:layout_alignParentTop="true"
        android:layout_marginTop="55dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView

            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:layout_toLeftOf="@id/addBank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="8dp"
            android:text="Transactions"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/searchTv"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/addTv"
            android:background="@drawable/blue_rect_btn"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="Search"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/search"
            android:layout_marginRight="10dp"
            android:textColor="@color/white" />

        <TextView
            android:layout_marginRight="10dp"
            android:id="@+id/addBank"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/green_rect_btn"
            android:gravity="center"
            android:padding="10dp"
            android:text="Add Bank"
            android:layout_toLeftOf="@id/addTv"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/addTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/green_rect_btn"
            android:gravity="center"
            android:padding="10dp"
            android:text="Add Transaction"
            android:textColor="@color/white" />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/topbar"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/transection_LV"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:paddingTop="70dp"
        android:id="@+id/addbank_lay"
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:background="@color/dark_trans"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center_horizontal"
            android:padding="30dp"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="80dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/white_rect_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:text="Add Bank"
                android:textAllCaps="true"
                android:gravity="center"/>

            <EditText
                android:imeOptions="actionDone"
                android:id="@+id/bank_nameEt"
                android:textSize="15sp"
                android:drawableTint="@color/colorAccent"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Bank Name"
                />

            <Button
                android:id="@+id/addbank_btn"
                android:text="Add"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/blue_rect_btn"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
