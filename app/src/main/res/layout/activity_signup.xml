<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:gravity="center_horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.mind_android.bookingapp.activities.SignupActivity">


    <RelativeLayout
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:background="@drawable/loginbg"
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/logo"
            android:layout_width="130dp"
            android:layout_height="110dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="13dp"
            android:background="@drawable/login_screen_logo" />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/signup_header"
            android:padding="10dp"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:text="Sign Up"
            android:textStyle="bold"
            android:fontFamily="@font/mydridpro"
            android:layout_below="@id/logo"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_below="@id/signup_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:textSize="15sp"
                android:inputType="text"
                android:id="@+id/nameET"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawableLeft="@drawable/user16"
                android:textColor="@color/black"
                android:hint="Full Name "
                android:textColorHint="@color/black"
                android:drawablePadding="10dp"/>

            <EditText
                android:textSize="15sp"

                android:layout_marginTop="10dp"
                android:inputType="textEmailAddress"
                android:id="@+id/emailEt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawableLeft="@drawable/email16"
                android:textColor="@color/black"
                android:hint="Email"
                android:textColorHint="@color/black"
                android:drawablePadding="10dp"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:layout_weight="0.5"
                    android:src="@drawable/call_icon16"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:text="+91"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/dropdown_icon10"
                    android:minWidth="60dp"
                    android:id="@+id/spinner1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <EditText
                    android:textSize="15sp"
                    android:layout_weight="5"
                    android:inputType="phone"
                    android:id="@+id/phoneEt"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:textColor="@color/black"
                    android:hint="Phone No."
                    android:textColorHint="@color/black"
                    android:drawablePadding="10dp"/>
            </LinearLayout>



            <EditText
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:inputType="textPassword"
                android:id="@+id/passEt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawableLeft="@drawable/pass_icon16"
                android:textColor="@color/black"
                android:hint="Password"
                android:textColorHint="@color/black"
                android:drawablePadding="10dp"/>

            <EditText
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:inputType="textPassword"
                android:id="@+id/cPassEt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawableLeft="@drawable/pass_icon16"
                android:textColor="@color/black"
                android:hint="Confirm Password"
                android:textColorHint="@color/black"
                android:drawablePadding="10dp"/>

        </LinearLayout>
        <RelativeLayout
            android:id="@+id/next_signup"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="50dp" >

            <TextView
                android:layout_centerInParent="true"
                android:text="Next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:id="@+id/textView" />

            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignTop="@+id/textView"
                android:layout_toEndOf="@+id/textView"
                android:layout_toRightOf="@+id/textView"
                android:src="@drawable/login_icon" />
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
